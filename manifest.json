{
  "manifest_version": 3,
  "name": "Ai Pets",
  "version": "1.0",
  "description": "Adds Chibi pets to ChatGPT, Claude , Copilot and more!",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://www.perplexity.ai/*",
        "https://copilot.microsoft.com/*",
        "https://www.bing.com/chat*",
        "https://lovable.dev/*",
        "https://bolt.new/*",
        "https://createanything.com/*",
        "https://www.createanything.com/*",
        "https://chat.deepseek.com/*",
        "https://www.blackbox.ai/*",
        "https://app.blackbox.ai/*",
        "https://v0.dev/*",
        "https://v0.app/*",
        "https://replit.com/*"
      ],
      "js": [
        "config.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "characters/**"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}